{
    "manifest_version": 3,
    "name": "Link-Collector Clipper",
    "version": "1.0.0",
    "description": "Send links directly to your Link-Collector Knowledge Base.",
    "permissions": [
        "activeTab",
        "tabs"
    ],
    "action": {
        "default_title": "Save to Link-Collector"
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}